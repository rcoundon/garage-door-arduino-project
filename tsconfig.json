{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./.build",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "preserveConstEnums": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["main/*"]
    }
  },
  "exclude": ["./jest.config.js", "./node_modules/**/*", "./build/**/*"],
  "include": [
    "stacks",
    "src",
    "config",
    "node_modules/@types/**/*",
  ]
}